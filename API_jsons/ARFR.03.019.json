": 0, "seminar": 26, "colloquium": 0, "web_learning": 0, "independent_work": 26, "individual_work": 0, "internship": 0}, "prerequisites": [{"required": true, "uuid": "3a8d6968-0cee-caef-f54f-b1b23145433b", "code": "MV00.00.039", "title": {"en": "Fundamentals of Diagnostics", "et": "Diagnostika alused"}, "credits": 16, "state": {"code": "confirmed", "et": "Kinnitatud", "en": "confirmed"}, "last_update": "2024-04-01T15:12:20", "alternatives": [{"uuid": "62901d09-3d45-ffd9-06b8-8df341b867b7", "code": "AR00.00.016", "state": {"code": "confirmed", "et": "Kinnitatud", "en": "confirmed"}, "last_update": "2024-02-05T11:04:36", "title": {"en": "Fundamentals of Diagnostics", "et": "Diagnostika alused"}, "credits": 17, "type": {"code": "complex", "et": "Kompleksaine", "en": "Complex course"}}]}], "is_enlight_course": false}, "overview": {"study_languages": [{"code": "et", "et": "eesti keel", "en": "Estonian"}], "description": {"en": "The course consist of lectures on basic principles and general problems in clinical pharmacology, and disease oriented small group seminars using problem-based approach or appraisal of published research articles.", "et": "Kahe nädalane kliinilise farmakoloogia tsükkel, mis koosneb iseseisvast tööst ja seminaridest. Seminarides käsitletakse ravimite kliiniliste uuringute metodoloogiat ja analüüsi, kliinilise farmakokineetika ja farmakogeneetika tähtsust ravimite kasutamisel, ravimite kõrval- ja koostoimed, sagedamini esinevate haiguste ravi, ravimite kasutamist patsientide eripopulatsioonides - eakad, lapsed, neeru- ja maksapuudulikkusega patsiendid."}, "objectives": [{"en": "After completion of the course the student is able to evaluate the need for pharmacotherapy and perform evidence based and safe pharmacotherapy.", "et": "Ravimite ratsionaalse valiku printsiipide ja ravimite ordineerimise oskuste arendamine ja kinnistamine."}], "learning_outcomes": [{"en": "After completion of the course the student:\n1. Is familiar with and able to use the basic terminology of clinical pharmacology and evidence based medicine; able to find, use and critically appraise drug information;\n2. Is able to decide if pharmacotherapy is necessary, pose a measurable treatment goal, select a drug group and a drug based on efficacy, safety and cost, consider suitability of the chosen therapy to the patient, Is able to recognise an adverse drug reaction and to manage this, write a correct prescription, inform the patient and monitor the treatment.", "et": "Kursuse läbinud üliõpilane:\n1. teab ja oskab kasutada kliinilise farmakoloogia ja tõenduspõhise meditsiini teabeallikaid, sealhulgas eelretsenseeritud artiklite andmebaase; \n2. oskab kriitiliselt hinnata tõenduspõhise teabe kvaliteeti, usaldusväärsust, tähendust ja rakendatavust;\n3. oskab otsustada farmakoteraapia vajalikkuse üle, püstitada mõõdetava ravieesmärgi, valida ravimirühmade ja ravimite hulgast efektiivseima, ohutuima ning majanduslikult põhjendatuima ravi, hinnata ravimi sobivust konkreetsele patsiendile, kohandada farmakoteraapiat patsientide eripopulatsioonides - lapsed, eakad, neeru- ja maksapuudulikkusega patsiendid, ravimi õigesti välja kirjutada, patsienti ravist teavitada ning ravi jälgida ning selle tulemuslikkust hinnata."}], "notes": {}}, "grading": {"independent_work": {}, "independent_work_assessments": [{"work_type": {"code": "written", "et": "Kirjalik lõpphindamine", "en": "final written assessment"}, "description": {"et": "Kirjalik lõpphindamine koosneb kahest osast.\n1)\tvalik- ja lühivastustega test (20 küsimust, iga õige vastus annab 1 punkti),\n2)\thaigusjuhupõhine ülesanne (3 juhtu, iga juhu eest võib saada 0 kuni 3 punkti)."}}], "grade_preconditions": {"et": "Iga puudutud seminari kohta tuleb lõpphindamisele pääsemiseks esitada essee koostöös õppejõuga valitud asjakohasel teemal. Referaat peab olema 3 lk pikk (Times New Roman, single line spacing, 12 punkti kirjasuurus, kirjanduse loetelu peale selle), põhinema viimasel 5 aastal avaldatud teaduslikel originaaluurimustel või süsteemsetel ülevaadetel (vähemalt 5 allikat) ning sisaldama ülevaadet olemasolevatest andmetest ning üliõpilase üldistust neist."}, "grade_evaluation": {"et": "Arvestuse saamiseks peab minimaalne testist saadud punktide arv olema 14 ja haigusjuhupõhistest ülesannetest 6."}, "debt_elimination": {"et": "Testi on võimalik sooritada korduvalt järgmise seminaritsükli lõpus või õppejõuga kokkulepitud aegadel."}, "assessment_scale": {"code": "pass", "et": "Eristamata (arv, m.arv, mi)", "en": "non-differentiated (pass, fail, not present)"}, "results_available_from": {}}, "resources": {"web_based": {"code": "2", "et": "põimõpe", "en": "blended learning"}, "website_url": "http://moodle.ut.ee", "is_moodle_connected": false, "mandatory_materials": "Bennet P.N. Brown M.J. Clinical Pharmacology. Tenth ed., Elsevier 2008\n\nÕppejõu poolt tsükli ajal antavad materjalid", "recommended_materials": "Ravimiinfo Bülletään. Sõltumatu väljaanne, Ravimiamet.\nÜlevaate artiklid ajakirjadest: The Lancet, BMJ, N Engl J Med, J Am Med Ass, Br J Clin Pharmacol jne."}, "participants": {"lecturers": [{"person_uuid": "41d1b716-8cd2-4c04-412d-e8c4c84e5ffb", "person_name": "Jana Lass", "structural_unit": {"code": "MVBS09MV", "name": {"en": "Chair of Medical Microbiology and Virology", "et": "meditsiinilise mikrobioloogia ja viroloogia õppetool"}, "phone": "+372 737 4170", "address": "EST", "level": 4, "academic": false, "supports_continuous_learning": false, "parent_code": "MVBS09"}, "is_responsible": false, "is_teaching": true, "study_group_roles": {"5. rühm": {"code": "3", "et": "Seminarijuhendaja", "en": "supervisor of seminar"}, "11. rühm": {"code": "3", "et": "Seminarijuhendaja", "en": "supervisor of seminar"}, "12. rühm": {"code": "3", "et": "Seminarijuhendaja", "en": "supervisor of seminar"}, "1. rühm": {"code": "3", "et": "Seminarijuhendaja", "en": "supervisor of seminar"}, "4. rühm": {"code": "3", "et": "Seminarijuhendaja", "en": "supervisor of seminar"}, "15.